<section class="register" id="register">
    <div class="contenedor">
        <div class="register-wrapper" id="register-wrapper">
            <div class="form-container">
                <div class="header-bg">
                    <div class="col-lg-12 col-sm-12">
                        <header>FORMULARIO DE INSCRIPCION</header>
                    </div>
                </div>
                <div class="container f-con p-2 pt-0 sliding-form-container">
                    <div class="row text-center justify-content-center c-progress-bar-container">
                        <div id="c-progress" class="row px-5 m-0 text-center justify-content-center c-progress-bar">
                            <div class="col step">
                                <p>Datos Personales</p>
                                <div class="bullet">
                                    <span>1</span>
                                </div>
                                <ion-icon class="check" name="checkmark-outline"></ion-icon>
                            </div>
                            <div class="col step step2">
                                <p>Pago</p>
                                <div class="bullet">
                                    <span>2</span>
                                </div>
                                <ion-icon class="check" name="checkmark-outline"></ion-icon>
                            </div>
                            <div class="col step step3">
                                <p>Confirmacion</p>
                                <div class="bullet bullet-last">
                                    <span>3</span>
                                </div>
                                <ion-icon class="check" name="checkmark-outline"></ion-icon>
                            </div>
                        </div>
                        <div class="col-lg-8 text-center justify-content-center col-sm-12">
                            <div class="form-outer">
                                <form id="mmrun-rform" action="add-runner" method="post">
                                    <div class="r-form">
                                        <div class="page slide-page">
                                            <div class="title">Datos Personales:</div>

                                            <div class="flex-container">
                                                <div class="flex-items">
                                                    <div class="flex-container-inner">
                                                        <div class="flex-items-inner">
                                                            <div class="flex-container-content">
                                                                <div class="flex-items-content">
                                                                    <p>Elige una distancia</p>
                                                                </div>
                                                                <div class="flex-items-content">
                                                                    <select id="categoriesSelect" name="cat"></select>
                                                                    <input id="runnerUID" name="runnerUID" type="hidden">
                                                                    <% if (runnersLenght) { %>
                                                                        <script>
                                                                            document.getElementById('runnerUID').value =
                                                                                '<%= runnersLenght++ %>'
                                                                        </script>
                                                                        <% } %>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="flex-items-inner">
                                                            <div class="flex-container-content">
                                                                <div class="flex-items-content">
                                                                    <p>Precio</p>
                                                                </div>
                                                                <div class="flex-items-content price">
                                                                    <input id="transactionAmount" name="transactionAmount" type="hidden" style="color: var(--secondary)" value="1000">
                                                                    <p id="transactionP">-</p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="flex-items">
                                                    <div class="flex-container-inner">
                                                        <div class="flex-items-inner">
                                                            <div class="flex-container-content">
                                                                <div class="flex-items-content">
                                                                    <p>Nombre y Apellido</p>
                                                                </div>
                                                                <div class="flex-items-content">
                                                                    <input id="r-name" name="runnerName" type="text">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="flex-items-inner">
                                                            <div class="flex-container-content">
                                                                <div class="flex-items-content">
                                                                    <p>Edad</p>
                                                                </div>
                                                                <div class="flex-items-content">
                                                                    <select id="ageSelect" name="ageSelect"></select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="flex-items">
                                                    <div class="flex-container-inner">
                                                        <div class="flex-items-inner">
                                                            <div class="flex-container-content">
                                                                <div class="flex-items-content">
                                                                    <p>Genero</p>
                                                                </div>
                                                                <div class="flex-items-content">
                                                                    <select name="genre" id="genre" class="rGenre" value="">
                                                                        <option value="Femenino">Femenino</option>
                                                                        <option value="Masculino">Masculino</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="flex-items-inner">
                                                            <div class="flex-container-content">
                                                                <div class="flex-items-content">
                                                                    <p>Fecha Nac</p>
                                                                </div>
                                                                <div class="flex-items-content">
                                                                    <input id="birth" name="birth" type="date">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="flex-items">
                                                    <div class="flex-container-inner">
                                                        <div class="flex-items-inner">
                                                            <div class="flex-container-content">
                                                                <div class="flex-items-content">
                                                                    <p>DNI</p>
                                                                </div>
                                                                <div class="flex-items-content">
                                                                    <input id="r-id" name="runnerID" type="text" placeholder="DNI">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="flex-items-inner">
                                                            <div class="flex-container-content">
                                                                <div class="flex-items-content">
                                                                    <p># de Socio</p>
                                                                </div>
                                                                <div class="flex-items-content">
                                                                    <input id="partner-id" name="partner_id" type="text" placeholder="Opcional">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="flex-items">
                                                    <div class="flex-container-inner">
                                                        <div class="flex-items-inner">
                                                            <div class="flex-container-content">
                                                                <div class="flex-items-content">
                                                                    <p>email</p>
                                                                </div>
                                                                <div class="flex-items-content">
                                                                    <input id="r-email" name="runnerEmail" type="text" placeholder="email@email.com">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="flex-items-inner">
                                                            <div class="flex-container-content">
                                                                <div class="flex-items-content">
                                                                    <p>Camiseta</p>
                                                                </div>
                                                                <div class="flex-items-content">
                                                                    <select name="tShirtSize" id="t-size" class="t-size" value="">
