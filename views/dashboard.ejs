    <style>
         :root {
            --primary: #461D6C;
            --lighter25: #582487;
            --secondary: #00FABA;
            --opposite: #b9e293;
            --black1: #222;
            --black2: #262626;
            --grey: #ccc;
            --white: #fff;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Montserrat', sans-serif;
            scroll-behavior: contain;
        }
        
        body {
            overflow: hidden;
        }
        
        .btn a {
            color: white;
        }
        
        .table {
            overflow-x: auto;
        }
        
        .table thead th {
            font-size: 12px;
        }
        
        .table tbody td {
            font-size: 12px;
        }
        
        .wrapper {
            display: flex;
            flex-direction: row;
            min-width: 100%;
            height: 100vh;
            background: var(--lighter25);
        }
        
        .wrapper .sidebar {
            background: var(--primary);
            min-width: 350px;
            min-height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
        }
        
        .wrapper .sidebar img {
            background: var(--primary);
            max-width: 200px;
        }
        
        .wrapper .sidebar .sections {
            min-height: 100%;
            min-width: 100%;
            padding: 2rem 0rem;
        }
        
        .wrapper .sidebar .sections ul {
            width: 100%;
        }
        
        .wrapper .sidebar .sections ul li {
            text-decoration: none;
            list-style: none;
            color: var(--secondary);
            font-size: 24px;
            margin: 0.4rem 0rem;
            padding: 5px 15px;
            border-radius: 15px 0px 0px 15px;
            font-family: 'Montserrat', sans-serif;
            text-transform: uppercase;
            font-style: italic;
            cursor: pointer;
        }
        
        .wrapper .sidebar .sections ul li:hover {
            color: var(--secondary);
            background: var(--lighter25);
        }
        
        .wrapper .content {
            min-height: 100%;
            width: 100%;
            display: flex;
            flex-direction: column;
            padding: 2rem;
            position: relative;
        }
        
        .wrapper .content .content-header {
            min-height: 60px;
            min-width: 100%;
            display: block;
            align-items: center;
            color: var(--secondary);
            text-align: start;
            border-bottom: 2px solid var(--secondary);
            margin-bottom: 0.5rem;
        }
        
        .wrapper .content .content-header h1 {
            margin: auto;
            margin-bottom: 0.5rem;
            font-weight: 600;
            font-style: italic;
            text-transform: uppercase;
            font-family: 'Montserrat', sans-serif;
        }
        
        .wrapper .content .table-wrapper {
            max-width: 100%;
            max-height: 95%;
            overflow: auto;
            border: 1px solid var(--white);
            padding: 0.5rem !important;
            background-color: var(--white);
            border-radius: 15px;
        }
        
        .app-table-wrapper {
            display: none;
        }
    </style>



